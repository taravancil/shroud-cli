{
  "name": "shroud-cli",
  "version": "0.3.0",
  "description": "An filesystem-based CLI password manager",
  "bin": {
    "shroud": "./build/bin/shroud"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "scripts": {
    "build": "mkdir -p build && gulp compile",
    "prepublish": "npm run test && mkdir -p build && gulp compile",
    "start": "gulp",
    "test": "prettier --check lib/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/taravancil/shroud-cli"
  },
  "author": {
    "name": "Tara Vancil",
    "email": "contact@taravancil.com"
  },
  "keywords": [
    "password",
    "password manager",
    "secrets",
    "secret store",
    "encryption"
  ],
  "license": "MIT",
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-runtime",
      "transform-async-to-generator"
    ]
  },
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "husky": "^3.1.0",
    "prettier": "^1.19.1",
    "standard": "^8.6.0"
  },
  "dependencies": {
    "copy-paste": "^1.3.0",
    "inquirer": "^1.2.3",
    "minimist": "^1.2.0",
    "shroud": "^0.6.1"
  }
}
